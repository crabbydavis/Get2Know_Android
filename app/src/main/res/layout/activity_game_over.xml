<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/new_gray">

    <TextView
        android:id="@+id/winnerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner!"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:typeface="serif"
        />

    <TextView
        android:id="@+id/finalScoreTitleText"
        android:layout_above="@+id/player1FinalScoreText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/final_score"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:typeface="serif"
        />

    <TextView
        android:id="@+id/player1FinalScoreText"
        android:layout_above="@+id/scoreSpacer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1 Score"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:typeface="serif"
        />

    <Space
        android:id="@+id/scoreSpacer"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Dark_Blue"
        />

    <TextView
        android:id="@+id/player2FinalScoreText"
        android:layout_below="@+id/scoreSpacer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2 Score"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:typeface="serif"
        />

    <Button
        android:id="@+id/menuButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Menu"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:typeface="sans"
        android:background="@color/new_orange"/>

</RelativeLayout>