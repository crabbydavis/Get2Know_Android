<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/new_gray"
                >
    <TextView
        android:id="@+id/playerTitleText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter Player Names:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:typeface="serif"
        />

    <TextView
        android:id="@+id/player1Title"
        android:layout_below="@+id/playerTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="@string/player_1"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:typeface="serif"
        />

    <EditText
        android:id="@+id/player1Name"
        android:layout_below="@+id/player1Title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="textAutoCorrect|textCapSentences"
        />


    <TextView
        android:id="@+id/player2Title"
        android:layout_below="@+id/player1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="@string/player_2"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:typeface="serif"
        />

    <EditText
        android:id="@+id/player2Name"
        android:layout_below="@+id/player2Title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:inputType="textAutoCorrect|textCapSentences"
        />

    <TextView
        android:id="@+id/difficultyText"
        android:layout_below="@id/player2Name"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Pick the Level of Difficulty"
        android:textSize="20dp"
        android:typeface="serif"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/difficulty"
        android:layout_below="@id/difficultyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/easyButton"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="Easy"
            android:textColor="@color/black"
            android:typeface="sans"
            android:background="@color/new_orange"/>
        <Button
            android:id="@+id/mediumButton"
            android:layout_centerHorizontal="true"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="Medium"
            android:textColor="@color/black"
            android:typeface="sans"
            android:background="@color/new_orange"/>
        <Button
            android:id="@+id/hardButton"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="Hard"
            android:textColor="@color/black"
            android:typeface="sans"
            android:background="@color/new_orange"/>
    </RelativeLayout>

    <Button
        android:id="@+id/startButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="@string/start_game"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:typeface="sans"
        android:background="@color/new_orange"/>

</RelativeLayout>